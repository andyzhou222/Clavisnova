# Clavisnova Environment Variables
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-change-this-in-production
HOST=0.0.0.0
PORT=8080
DEBUG=false

# Database Configuration
# For Supabase PostgreSQL (recommended for production). Use psycopg2 driver:
# Example: postgresql+psycopg2://postgres:YOUR_PASSWORD@db.PROJECT-REF.supabase.co:5432/postgres
DATABASE_URL=postgresql+psycopg2://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# For SQLite (development only):
# DATABASE_URL=sqlite:///app/data/Clavisnova.db

# CORS Configuration
# Allow your Cloudflare Pages domain
CORS_ORIGINS=https://your-frontend-domain.pages.dev,https://your-render-app.onrender.com

# Logging
LOG_LEVEL=INFO

# Application Version
VERSION=1.0.0

# Frontend Configuration (Cloudflare Pages)
FRONTEND_URL=https://your-frontend-domain.pages.dev

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com
NOTIFICATION_EMAIL=admin@pianoforschools.org

# Render-specific Configuration
RENDER_EXTERNAL_URL=$RENDER_EXTERNAL_URL
